@model Candidate

<div>
    <h3 class="display-4">Cangulations @Model.FullName</h3>
    <p class="lead" >Your applications has been <mark>accepted.</mark></p>
    <p class="lead">Many thanks for your interest.</p>
    <hr />
    <blockquote class="blockquote" >
        You have enrolled to @Model.SelectedCourse course.
    </blockquote>
    <p class="text-muted">You applied at @Model.ApplyAt.</p>

    <div class="btn-group">
        <a asp-action="Index" class="btn btn-outline-success">Applications</a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Home</a>
    </div>
</div>